#!/usr/bin/env bash

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

BUILD_DIR="$1"
SOURCE_DIR="$(dirname $0)/../fonts"
TARGET_DIR="$BUILD_DIR/.fonts"

echo "-----> Extracting fonts to $TARGET_DIR"

mkdir -p "$TARGET_DIR"

ln -s $TARGET_DIR/verdana.ttf Verdana.ttf
ln -s $TARGET_DIR/verdanab.ttf Verdana_Bold.ttf
ln -s $TARGET_DIR/verdanai.ttf Verdana_Italic.ttf
ln -s $TARGET_DIR/verdanaz.ttf Verdana_Bold_Italic.ttf
#cp -v $SOURCE_DIR/* $TARGET_DIR | indent
